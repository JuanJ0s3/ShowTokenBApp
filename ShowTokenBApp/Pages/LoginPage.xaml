<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowTokenBApp.Pages.LoginPage"
             xmlns:vm="clr-namespace:ShowTokenBApp.ViewModels"
             Title="LoginPage"
             BackgroundColor="White">
    

    <ContentPage.BindingContext>
        <vm:LoginViewModel/>
    </ContentPage.BindingContext>

    <StackLayout  VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Iniciar Sesión" 
            FontSize="24" 
            HorizontalOptions="Center" 
            TextColor="Black" 
            Margin="0,0,0,20" />

        <Label Text="Usuario" TextColor="Black"  />

        <Entry  Text="{Binding Username}" BackgroundColor="#999990" TextColor="Black" />

        <Label Text="Contraseña" TextColor="Black"  />

        <Entry IsPassword="True" Text="{Binding Password}" TextColor="Black" BackgroundColor="#999990"  Margin="0,0,0,20" />
        
        <Button Command="{Binding LoginCommand}" Text="Iniciar Sesión" BackgroundColor="#007AFF" TextColor="Black"  />
    </StackLayout>
</ContentPage>