<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="ShowTokenBApp.Popup.LoadingPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups">


    <Frame
        Padding="0"
        BackgroundColor="Green"
        BorderColor="Transparent"
        CornerRadius="15"
        HasShadow="True"
        HeightRequest="150"
        WidthRequest="200">

        <Frame
            Padding="20"
            BackgroundColor="Green"
            BorderColor="Transparent"
            CornerRadius="15"
            HasShadow="True">

            <VerticalStackLayout
                HorizontalOptions="Center"
                Spacing="15"
                VerticalOptions="Center">
                <ActivityIndicator
                    HeightRequest="50"
                    IsEnabled="True"
                    IsRunning="True"
                    IsVisible="True"
                    WidthRequest="50"
                    Color="#2196F3" />
                <Label
                    x:Name="lblLoading"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Cargando..."
                    TextColor="White"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Frame>
    </Frame>
</mopups:PopupPage>